{
  "name": "rill",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "bun install && cd server && bun install && cd ..",
    "run-server": "bun ./server/src/index.ts",
    "dev": "concurrently \"bun run-server\" \"vite\"",
    "start": "bun run build && concurrently \"bun run-server\" \"bun run preview\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "bun test",
    "docker:build": "docker build -t rill .",
    "docker:start": "docker run --rm -it -p 3000:3000 rill"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/vite": "^4.0.14",
    "@tiptap/extension-bold": "^2.11.5",
    "@tiptap/extension-bullet-list": "^2.11.5",
    "@tiptap/extension-document": "^2.6.6",
    "@tiptap/extension-heading": "^2.11.5",
    "@tiptap/extension-history": "^2.11.5",
    "@tiptap/extension-italic": "^2.11.5",
    "@tiptap/extension-list-item": "^2.11.5",
    "@tiptap/extension-ordered-list": "^2.11.5",
    "@tiptap/extension-paragraph": "^2.6.6",
    "@tiptap/extension-placeholder": "^2.11.5",
    "@tiptap/extension-text": "^2.6.6",
    "@tiptap/react": "^2.6.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.0",
    "lucide-react": "^0.483.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.14",
    "tw-animate-css": "^1.2.4",
    "uuid": "^11.1.0",
    "y-prosemirror": "^1.2.12",
    "yjs": "^13.6.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/bun": "^1.2.5",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  }
}
